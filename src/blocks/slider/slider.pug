mixin slider({items, values, isRange, isInverted, isVertical, isTooltipsVisible, isMarkupVisible, min, max, step, handlers}={})
  div.js-slider.slider(
    data-items=items
    data-values=values
    data-is-range=isRange === undefined ? false : isRange.toString()
    data-is-vertical=isVertical === undefined ? false : isVertical.toString()
    data-is-tooltips-visible=isTooltipsVisible === undefined ? false : isTooltipsVisible.toString()
    data-is-markup-visible=isMarkupVisible === undefined ? false : isMarkupVisible.toString()
    data-is-inverted=isInverted === undefined ? false : isInverted.toString()
    data-min=min
    data-max=max
    data-step=step
    data-handlers=handlers
  )
