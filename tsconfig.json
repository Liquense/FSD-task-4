  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "removeComments": false,
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
